    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "testimonial": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "caseStudy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::service.service"
    }
  }
}
